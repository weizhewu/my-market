<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.soft1841.controller.AddCashierController"
            prefHeight="400.0" prefWidth="500.0">
    <HBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
    minHeight="50" alignment="CENTER">
        <Label text="新增收银员信息"/>
    </HBox>
    <VBox spacing="20" minHeight="400"
    AnchorPane.topAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <TextField promptText="姓名" fx:id="cashierName"/>
        <TextField promptText="工号" fx:id="cashierNumber"/>
        <TextField promptText="密码" fx:id="cashierPassword"/>
    </VBox>
    <Button text="确认" onAction="#addCashier"
            AnchorPane.bottomAnchor="200" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="180"/>


</AnchorPane>
